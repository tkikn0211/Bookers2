 <body>
    <% if @book.errors.any? %>
     <%= @book.errors.count %>
      error s prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
     </ul>
      <% end %>
    <main>
      <div class="container px-5 px-sm-0">
        <div class="row">
          <div class="col-md-3">
            <%= render 'template/user_info', user:current_user %>
            <%= render 'template/new_book', Book:@book %>
          </div>
          <div class="col-md-8 offset-md-1">
            <h2>Books</h2>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan = "3"></th>
                </tr>
              </thead>
              <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td>
                    <% if book.user.profile_image.attached? %>
                      <%= link_to user_path(book.user.id) do %>
                        <%= image_tag book.user.profile_image, size: "40x40" %>
                      <% end %>
                    <% else %>
                      <%= link_to user_path(book.user.id) do %>
                        <%= image_tag 'no_image', size: "40x40" %>
                      <% end %>
                    <% end %>
                  </td>
                  <td>
                    <%= link_to book_path(book.id) do %>
                      <%= book.title %>
                    <% end %>
                  </td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </main>
</body>

